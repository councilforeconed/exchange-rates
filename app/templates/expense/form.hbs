<form role="form" {{action "expenseSubmission" on="submit"}}>
  <div class="form-group">
    <label for="newExpenseDescription">Expense Description
      {{input type="text" class="form-control" value=newExpenseDescription placeholder="Expense Description" id="newExpenseDescription"}}
    </label>
  </div>
  <div class="form-group">
    <label for="cost">Expense Cost in {{currencySelected}}
      {{view ExchangeRates.NumberField value=newExpenseCost class="form-control" min="0"}}
    </label>
  </div>
  <button type="submit" {{bind-attr class=":btn :btn-primary :btn-block newExpenseDescription::disabled canSubmitNewForm::disabled"}}>Submit Item</button>
</form>