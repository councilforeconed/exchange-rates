<h4>
  {{#if newExpenseDescription}}
    {{newExpenseDescription}}
  {{else}}
    New Item
  {{/if}}
</h4>
<table class="table">
  <thead>
    <tr>
      <th>Currency</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{currencySelected}} ({{dateToday}})</td>
      <td>{{formatCurrency newExpenseCost}}</td>
    </tr>
    <tr>
      <td>USD ({{dateToday}})</td>
      <td>{{formatCurrency newExpenseCostInCurrentUSD}}</td>
    </tr>
    <tr>
      <td>USD ({{dateTwoMonthsAgo}})</td>
      <td>{{formatCurrency newExpenseCostInTwoMonthsAgoUSD}}</td>
    </tr>
  </tbody>
</table>